    "dev": "nodemon src/server.js",
    "test": "jest --coverage --runInBand",
    "lint": "./node_modules/.bin/eslint . --fix",
    "format": "npx prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yaml,yml}\"",
